<Page x:Class="wpf_game_dev_cycle.Pages.EmailVerificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:wpf_game_dev_cycle.Pages"
      DataContext="{Binding Path=RegisterViewModel, Source={StaticResource ViewModelLocator}}"
      mc:Ignorable="d"
      Title="EmailVerificationPage" Height="85" Width="240"
      Background="Transparent">
    <Grid>
        <TextBlock Text="Email code:"
                   Foreground="DarkGray"
                   FontSize="12"
                   FontWeight="Medium"
                   FontFamily="Montserrat"                             
                   Margin="0,10,0,0"/>
        
        <TextBox x:Name="Name"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="13"
                 FontWeight="Medium"
                 FontFamily="Montserrat"                            
                 Foreground="Black"
                 CaretBrush="Black"
                 BorderBrush="DarkGray"
                 BorderThickness="0,0,0,3"
                 Height="28"
                 VerticalContentAlignment="Center"
                 Padding="5,0,0,0">
        </TextBox>
    </Grid>
</Page>
